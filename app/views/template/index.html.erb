<body>

    <!-- Navigation -->
 

    <!-- Page Content -->
    <div class="container">

      <div class="row">

        <div class="col-lg-3">

          <h1 class="my-4">Ziuzzugram</h1>
          
          <!-- 게시글 쓰는 버튼 상자 -->
          <div class="list-group">
            <div>
              <div class="card h-100">
                <a href="#"><img class="card-img-top" src="https://pticeletacice.files.wordpress.com/2017/05/1_3.jpg?w=900&h=400&crop=1" alt=""></a>
                <div class="card-body">
                  <h4 class="card-title">
                    <a href="#">Profile</a>
                  </h4>
                  <h5>About Me</h5>
                </div>
              </div>
            </div>
            <br>
                <a href='/template/create' button type="button" class="btn btn-outline-info">New Posting</button></a>
            
            <!-- 게시글 쓰는 버튼 상자 끝 -->
            
          </div>

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

          <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
            
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            
            <div class="carousel-inner" role="listbox">
              
              <div class="carousel-item active">
                <img class="d-block img-fluid" src="http://www.leveyindustries.com/img/galleryAssets/York_MadGab.jpg" alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block img-fluid" src="http://www.leveyindustries.com/img/galleryAssets/York_Restoration_Elements_Charade.jpg" alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block img-fluid" src="http://www.leveyindustries.com/img/galleryAssets/York_Line_Dance.jpg" alt="Third slide">
              </div>
              
            </div>
            
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
            
          </div>

          <div class="row">
            
            <% @posts.each do |p| %>
            
              <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                  <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
                  <div class="card-body">
                    <h4 class="card-title">
                    
                    </h4>
                    <h5><%= p.title %></h5>
                    <p><%= p.content %></p>
                    <p>hashtag : 
                    <%p.hashtags.each do |tag|%>
                      <%= tag.name%>
                    <%end%>
                    </p>
                    <a href= '/template/edit/<%=p.id%>'>Edit</a>
                  <a href= '/template/destroy/<%= p.id%>'>Delete</a>
                  
                  <hr>
                  
                  <%p.comments.each do |c|%>
                    댓글 : <%=c.content%> <a href='/comments/delete/<%=c.id%>'><br>Delete Comment</a><br>
                    
                  <%end%>
                  <form action='/comments/create/<%=p.id%>'>
                    <input type='textarea' name='comment' placeholder='Write'>
                    <button type='submit' class='btn btn-outline-primary'>Submit</button>
                  </form>
                  </div>
                </div>
              </div>
            <% end %>

          </div>
          <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->



    <!-- Bootstrap core JavaScript -->
    <script src="assets/jquery.min.js"></script>
    <script src="assets/bootstrap.bundle.min.js"></script>

  </body>